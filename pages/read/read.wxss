.collection {
  padding: 0 20rpx;
}

.content {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.box-l .img {
  width: 250rpx;
  height: 290rpx;
  box-shadow: 0 0 10px #919191;
}

.box-r {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 14px;
  color: #000;
}

.chapter {
  font-size: 12px;
  color: #aeafb3;
}

.speed {
  font-size: 12px;
  color: #aeafb3;
}
.speed-pro{
width: 70%;
display: block
}
.speed-text{
  display: block;
position: absolute;
right: 20rpx;
margin-top: -25rpx;

}
.record {
  font-size: 10px;
  color: #aeafb3;
}

.button {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.btn {
  font-size: 14px;
  background-color: #ccc;
  margin-right: 30rpx;
}

.bottom {
  height: 40px;
  text-align: center;
  line-height: 40px;
}

.bottom-text {
  font-size: 15px;
  color: #977367;
  z-index: 998;
  background-color: #fff;
}

.bottom-line {
  border: 2rpx solid #B9BABC;
 margin-top: -20px;
}
