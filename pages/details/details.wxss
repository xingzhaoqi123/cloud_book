.details {
  padding: 0 20rpx;
}

.book-t {
  display: flex;
  justify-content: space-between;
}

.book-img {
  width: 250rpx;
  height: 300rpx;
}

.main-msg {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 50rpx;
}

.main-msg .title {
  font-size: 14px;
  color: #444;
  font-weight: 900;
}

.main-msg .wordType {
  font-size: 12px;
  color: #555;
}

.book-b {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.book-b .btn {
  background-color: #ddd;
  color: #444;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 13px;
}

.book-desc {
  padding: 30rpx 20rpx;
  border-bottom: 2px solid #e9e9e9;
  font-size: 12px;
  line-height: 1.5;
}

.book-desc .title {
  font-weight: 700;
  font-size: 14px;
}

.book-desc .desc-main {
  margin-top: 50rpx;
  font-size: 12px;
  color: #333;
}

.book-catalog {
  border-bottom: 2rpx solid #e9e9e9;
  padding: 0 20rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}

.book-catalog .catalog-l {
  width: 300rpx;
  display: flex;
  justify-content: space-around;
}

.book-catalog .catelog-l .show-catalog {
  font-size: 15px;
  font-weight: 700;
  color: #333;
}

.catalogs {
  font-size: 12px;
  color: #444;
}

.update-time {
  font-size: 10px;
  color: #444;
}

.read-btn-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);
}

.read-btn-wrap .b-btn {
  background: #409eff;
  color: #fff;
  font-size: 12px;
  margin: 0;
}
.loading{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}